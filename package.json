{
    "name": "quick-pick-related-files",
    "displayName": "quick-pick-related-files",
    "description": "Jump to related files using Quick Pick",
    "version": "0.0.1",
    "publisher": "schreifels",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:quickPickRelatedFiles.show"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "quick-pick-related-files configuration",
            "properties": {
                "quickPickRelatedFiles.directoryLevelsToPreserve": {
                    "type": "number",
                    "default": 1,
                    "description": "Number of directory levels in the path to preserve"
                },
                "quickPickRelatedFiles.patternsToStrip": {
                    "type": "array",
                    "default": [
                        "{EXTENSION}",
                        "/[_\\.]?[sS]pec$/",
                        "/[_\\.]?[tT]est$/",
                        "/_?[cC]ontroller$/",
                        "/_?[hH]elper$/"
                    ],
                    "description": "Regular expressions or strings to remove from the path"
                }
            }
        },
        "commands": [
            {
                "command": "quickPickRelatedFiles.show",
                "title": "Quick Pick Related Files"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
